
@model IList<Decision.ViewModel.Home.ApplicantWithTopScoreViewModel>
    

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                <span class="fa fa-list-ol"></span>
                اساتید با بالاترین امتیاز
            </h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">

                @foreach (var item in Model)
                {
                    <li class="list-group-item log-list">
                        <span>@item.FullName</span>
                        <span class="badge">
                            <span class="fa fa-star text-warning"></span>
                            <span>@item.Score.GetPersianNumber()</span>
                        </span>
                    </li>
                }
            </ul>
        </div>
        <div class="panel-footer">
            <a href="@Url.Action(MVC.Applicant.List())">
                موارد بیشتر
                <span class="fa fa-arrow-left"></span>
            </a>
        </div>
    </div>


