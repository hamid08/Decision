@model Decision.ViewModel.ResearchExperience.ResearchExperienceViewModel

<div class="col-md-12 " id="researchExperience-@Model.Id">
    <div class="panel panel-default">

        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <i class="fa fa-list-alt"></i>
                    <label class="text-muted">
                        عنوان  :
                    </label>
                    <small>@Model.Title</small>
                </div>

                <div class="col-md-6">
                    <i class="fa fa-map-marker"></i>
                    <label class="text-muted">
                        چاپ توسط :
                    </label>
                    <small>@Model.PublishedIn</small>
                </div>
                <div class="col-md-3">
                    <i class="fa fa-calendar"></i>
                    <label class="text-muted">
                        سال انتشار :
                    </label>
                    <small>@Model.PublishDate.ToPersianString(PersianDateTimeFormat.Date)</small>
                </div>
                <div class="col-md-3">
                    <i class="fa fa-genderless"></i>
                    <label class="text-muted">
                        نوع :
                    </label>
                    <small>@Html.DisplayFor(a => a.ResearchType)</small>
                </div>
                <div class="col-md-6">
                    <i class="fa fa-github-alt"></i>
                    <label class="text-muted">
                        توضیحات اضافی :
                    </label>
                    <small>@Model.Description</small>
                </div>

            </div>

            @{Html.RenderPartial(MVC.Shared.Views._AuditLog, Model);}
        </div>
        <div class="panel-footer ">
            <div class="pull-left">
                <a class="btn btn-primary btn-sm" data-ajax-oncomplete="editGetOnComplete(xhr,status)"
                   data-ajax="true" data-ajax-method="GET"
                   data-ajax-begin="onBegin(xhr,this)"
                   data-ajax-mode="REPLACE-WITH" data-ajax-success="inlineEditGetOnSuccess(data, status, xhr,'@Model.Id')"
                   data-ajax-update="#researchExperience-@Model.Id"
                   href="@Url.Action(MVC.ResearchExperience.Edit(Model.Id))" role="button"><i class="fa fa-edit"></i>ویرایش</a>

                <button class="btn-sm btn btn-danger"
                        type="button" data-delete-url="@Url.Action(MVC.ResearchExperience.Delete())" data-Applicant="@Model.ApplicantId" data-removal-element="#researchExperience-@Model.Id" id="remove-@Model.Id">
                    <i class="fa fa-trash-o"></i>
                    حذف
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


